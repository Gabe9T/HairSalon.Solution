@{
    Layout = "_Layout";
        ViewData["Title"] = "Create Client";
}

@model HairSalon.Models.Client

<h4>Add New Client </h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    <br />
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
    <br />
    @Html.LabelFor(model => model.Number)
    <br />
    @Html.TextBoxFor(model => model.Number, new { placeholder = "Phone Number" })
    <br />
    <br />
    <input type="submit" value="Add Client" />
}

<button>@Html.ActionLink("Show all Stylists", "Index", "Stylists")</button>