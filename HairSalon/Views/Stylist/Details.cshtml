@{
    Layout = "_Layout";
}
@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name):  @Html.DisplayFor(model => model.Name)</h3>
<br />
<h3>@Html.DisplayNameFor(model => model.Specialty):  @Html.DisplayFor(model => model.Specialty)</h3>

@if (Model.Clients.Count == 0)
{
    <h3>No clients right now D: </h3>
}
else
{
    <h3>Clients:</h3>
    <ul>
        @foreach (Client client in Model.Clients)
        {
            <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
        }
    </ul>
}

@* Add client button *@
<p>
    @Html.ActionLink("Add Client", "Create", "Clients", new { stylistId = Model.StylistId }, null)
</p>

<p>@Html.ActionLink("Back to list", "Index")</p>
