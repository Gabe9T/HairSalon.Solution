@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Stylists</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    <br />
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
    <br />
     @Html.LabelFor(model => model.Specialty)
    <br />
    @Html.TextBoxFor(model => model.Specialty, new { placeholder = "Specialty" })
    <br />
    <br />
    <input type="submit" value="Add Stylist" />
}

<button>@Html.ActionLink("Show all Stylists", "Index")</button>