@{
    Layout = "_Layout";
    ViewData["Title"] = "Clients";
}

@using HairSalon.Models;

@if(Model.Count == 0)
{
    <h3>No Clients D: </h3>
    <p>@Html.ActionLink("Go back to Stylists", "Index", "Stylists")</p>
}
else
{
    <ul>
        @foreach(Client client in Model)
        {
            <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</li>
        }
    </ul>
    <button>@Html.ActionLink("Home", "Index", "Home")</button>
}